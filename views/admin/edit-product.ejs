<%- include("../includes/main.ejs") %>
<div class="container mt-5 is-max-desktop">
    <div class="columns">
        <div class="column is-three-fifths">
            <div class="card">
                <div class="card-content">
                    <form class="form" action="/admin/<% if(editing) { %>editproduct <% } else{ %>addproduct <% } %>"
                        method="post">

                        <div class="field">
                            <label for="" class="label"> Product Name </label>
                            <div class="control">
                                <input class="input" type="text" name="title" placeholder="enter Product Name"
                                    value="<% if(editing) { %><%= product.title %> <% } %>">
                            </div>
                        </div>

                        <div class="field">
                            <label for="imageUrl" class="label"> Image URL </label>
                            <div class="control">
                                <input class="input" type="text" name="imageUrl" placeholder="enter image URL" value="<% if(editing) { %><%= product.imageUrl %><%}%>">
                            </div>
                        </div>

                        <div class="field">
                            <label for="price" class="label"> Price </label>
                            <div class="control">
                                <input class="input" type="number" step="0.01" name="price" placeholder="enter Price"
                                    value="<% if(editing) { %><%= product.price %><%}%>">
                            </div>
                        </div>
                        <% if(editing){ %>
                            <input type="hidden" name="productId" value="<%= product.id %>">
                                <% } %>

                                <div class="field">
                                    <label for="description" class="label"> Description </label>
                                    <div class="control">
                                        <textarea class="textarea" type="text" name="description"
                                            placeholder="enter Description" cols="5"
                                            rows="5"><% if(editing) { %><%= product.description %><%}%></textarea>
                                    </div>
                                </div>

                                <div class="field">
                                    <div class="control">
                                        <button class="button is-link" type="submit"><% if(editing) {%> Save Changes
                                            <% } else{ %> Add Product <% } %></button>
                                    </div>
                                </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>